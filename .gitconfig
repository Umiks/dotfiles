[user]
    name = "Евгений Мищенко"
    email = "evgenjion@yandex-team.ru"
[alias]
    fa = fetch --all
    st = status
    di = diff
    br = branch
    ci = commit
    co = checkout
    cob = checkout -b
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    hist = log --pretty=format:'%C(yellow)%h%C(reset) %ad | %C(75)%s%C(reset) %C(yellow)%d%C(reset) [%an]' --graph --date=short --branches --all
[color]
    #branch = auto
    grep = auto
    #diff = auto
    interactive = auto
    status = auto
    ui = auto
[core]
    excludesfile = /Users/evgenjion/.gitignore_global
    autocrlf = input
    filemode = false
    preloadindex = true
    whitespace = fix,-indent-with-non-tab,-tab-in-indent,tabwidth=4,trailing-space,cr-at-eol
	editor = vim
[diff]
    noprefix = true

[merge]
    tool = vimdiff
    log = true
    ff = false
[color]
    diff = yes
    ui = auto
    # ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green
    whitespace = red reverse

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[diff]
    noprefix = true

[url "git@github.yandex-team.ru:"]
    pushInsteadOf = "ght:"
    pushInsteadOf = "git://github.yandex-team.ru/"

[url "git://github.yandex-team.ru/"]
    insteadOf = "ght:"

[url "git@github.com:"]
    pushInsteadOf = "gh:"
    pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
    insteadOf = "gh:"

[help]
    autocorrect = 1
